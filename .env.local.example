# Backend HTTP port exposed on the host
BACKEND_PORT=8000

# Frontend HTTP port exposed on the host
FRONTEND_PORT=3000

# ClickHouse ports exposed on the host
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_TCP_PORT=9000

# ClickHouse credentials used by the backend
CLICKHOUSE_URL=http://default:clickhouse@db:8123/gpw
CLICKHOUSE_HOST=db
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=gpw
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=clickhouse
CLICKHOUSE_SECURE=false
CLICKHOUSE_VERIFY=false

# Frontend -> backend proxy base URL (Next.js rewrites)
NEXT_PUBLIC_API_BASE=http://backend:8000
